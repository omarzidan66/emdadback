@model Emdad.Models.FormField

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Form Fields</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
</head>
<body class="bg-gray-50 p-8">
    <!-- Modern Form Container -->
    <div class="max-w-4xl m-10">
        <!-- Header Section -->
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-t-2xl px-8 py-6">
            <div class="flex items-center space-x-3">
                <div class="bg-white/20 rounded-full p-3">
                    <i class="fas fa-plus-circle text-white text-xl"></i>
                </div>
                <h1 class="text-3xl font-bold text-white">Form Fields</h1>
            </div>
        </div>

        <!-- Form Section -->
        <div class="bg-white rounded-b-2xl shadow-xl p-8">
            <form asp-action="Create" class="space-y-6">
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly"
                     class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-700 mb-6"></div>

                <!-- Primary Fields Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Left Column -->
                    <div class="space-y-6">
                        <!-- Sectors Name -->
                        <div class="group">
                            <label asp-for="SectorsServicesId"
                                   class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wide"></label>
                            <div class="relative">
                                <select asp-for="SectorsServicesId"
                                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm"
                                        asp-items="ViewBag.SectorsServicesId"></select>
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                    <i class="fas fa-building text-gray-400"></i>
                                </div>
                            </div>
                            <span asp-validation-for="SectorsServicesId"
                                  class="text-red-500 text-sm mt-1 block"></span>
                        </div>

                        <!-- Sectors Link -->
                        <div class="group">
                            <label asp-for="FormFieldLabel"
                                   class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wide"></label>
                            <div class="relative">
                                <input asp-for="FormFieldLabel"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm"
                                       placeholder="Enter sector link..." />
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                    <i class="fas fa-link text-gray-400"></i>
                                </div>
                            </div>
                            <span asp-validation-for="FormFieldLabel"
                                  class="text-red-500 text-sm mt-1 block"></span>
                        </div>

                        <!-- Sector Icon -->
                        <div class="group">
                            <label asp-for="FormFieldName"
                                   class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wide"></label>
                            <div class="relative">
                                <input asp-for="FormFieldName"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm"
                                       placeholder="Enter icon class..." />
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                    <i class="fas fa-icons text-gray-400"></i>
                                </div>
                            </div>
                            <span asp-validation-for="FormFieldName"
                                  class="text-red-500 text-sm mt-1 block"></span>
                        </div>

                        <!-- Sector Description -->
                        <div class="group">
                            <label asp-for="FormFieldType"
                                   class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wide"></label>
                            <div class="relative">
                                <input asp-for="FormFieldType"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-200 bg-white shadow-sm"
                                       placeholder="Enter description..." />
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                    <i class="fas fa-file-alt text-gray-400"></i>
                                </div>
                            </div>
                            <span asp-validation-for="FormFieldType"
                                  class="text-red-500 text-sm mt-1 block"></span>
                        </div>
                        <div class="flex items-center space-x-3 p-3 bg-white rounded-lg border border-gray-200">
                            <label class="flex items-center cursor-pointer">
                                <input class="form-check-input h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                                       asp-for="FormFieldIsRequired" />
                                <span class="ml-3 text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.FormFieldIsRequired)</span>
                            </label>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="space-y-6">
                        <!-- Status Checkboxes -->
                        <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                                <i class="fas fa-check-circle text-gray-500 mr-2"></i>
                                Status Settings
                            </h3>

                            <div class="space-y-4">
                                <!-- Is Active -->
                                <div class="flex items-center space-x-3 p-3 bg-white rounded-lg border border-gray-200">
                                    <label class="flex items-center cursor-pointer">
                                        <input class="form-check-input h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                                               asp-for="IsActive" />
                                        <span class="ml-3 text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.IsActive)</span>
                                    </label>
                                </div>

                                <!-- Is Delete -->
                                <div class="flex items-center space-x-3 p-3 bg-white rounded-lg border border-gray-200">
                                    <label class="flex items-center cursor-pointer">
                                        <input class="form-check-input h-4 w-4 text-red-600 border-gray-300 rounded focus:ring-red-500"
                                               asp-for="IsDelete" />
                                        <span class="ml-3 text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.IsDelete)</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex justify-between items-center pt-8 border-t border-gray-200">
                    <div>
                        <a asp-action="Index"
                           class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                            <i class="fas fa-arrow-left mr-2"></i>
                            Back to List
                        </a>
                    </div>
                    <div>
                        <input type="submit"
                               value="Create"
                               class="inline-flex items-center px-8 py-3 border border-transparent rounded-lg text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 shadow-lg hover:shadow-xl" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <style>
        /* Custom checkbox styles */
        .form-check-input {
            appearance: none;
            background-color: #fff;
            border: 2px solid #d1d5db;
            border-radius: 0.25rem;
            width: 1rem;
            height: 1rem;
            position: relative;
            cursor: pointer;
            transition: all 0.2s ease-in-out;
        }

            .form-check-input:checked {
                background-color: currentColor;
                border-color: currentColor;
            }

                .form-check-input:checked::after {
                    content: "";
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    width: 0.25rem;
                    height: 0.5rem;
                    border: 2px solid white;
                    border-top: none;
                    border-left: none;
                    transform: translate(-50%, -60%) rotate(45deg);
                }

            .form-check-input:focus {
                outline: none;
                ring: 2px;
                ring-offset: 2px;
            }
    </style>
</body>
</html>

