@model Emdad.Models.SectorsServices

@{
    ViewData["Title"] = "Delete";
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Modern Sectors Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
</head>
<body class="bg-gray-50 p-8">
    <div class="max-w-4xl m-10">
        <!-- Header -->
        <div class="bg-gradient-to-r from-red-600 to-pink-600 rounded-t-2xl px-8 py-6">
            <div class="flex items-center space-x-3">
                <div class="bg-white/20 rounded-full p-3">
                    <i class="fas fa-trash-alt text-white text-xl"></i>
                </div>
                <h1 class="text-3xl font-bold text-white">Delete Sector Services</h1>
            </div>
        </div>

        <!-- Confirmation Box -->
        <div class="bg-white rounded-b-2xl shadow-xl p-8 space-y-8">
            <h3 class="text-xl font-semibold text-red-600">
                Are you sure you want to delete this?
            </h3>

            <!-- Details Preview -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4 text-sm text-gray-800">
                <div>
                    <span class="font-semibold">@Html.DisplayNameFor(model => model.SectorsServicesName):</span>
                    <div>@Html.DisplayFor(model => model.SectorsServicesName)</div>
                </div>
                <div>
                    <span class="font-semibold">@Html.DisplayNameFor(model => model.SectorsServicesType):</span>
                    <div>@Html.DisplayFor(model => model.SectorsServicesType)</div>
                </div>
                <div>
                    <span class="font-semibold">@Html.DisplayNameFor(model => model.SectorsServicesLink):</span>
                    <div>@Html.DisplayFor(model => model.SectorsServicesLink)</div>
                </div>
                <div>
                    <span class="font-semibold">@Html.DisplayNameFor(model => model.Sectors.SectorsName):</span>
                    <div>@Html.DisplayFor(model => model.Sectors.SectorsName)</div>
                </div>
                <div>
                    <span class="font-semibold">@Html.DisplayNameFor(model => model.IsActive):</span>
                    <div>@Html.DisplayFor(model => model.IsActive)</div>
                </div>
                <div>
                    <span class="font-semibold">@Html.DisplayNameFor(model => model.IsDelete):</span>
                    <div>@Html.DisplayFor(model => model.IsDelete)</div>
                </div>
                <div>
                    <span class="font-semibold">@Html.DisplayNameFor(model => model.CreateId):</span>
                    <div>@Html.DisplayFor(model => model.CreateId)</div>
                </div>
                <div>
                    <span class="font-semibold">@Html.DisplayNameFor(model => model.CreateDate):</span>
                    <div>@Html.DisplayFor(model => model.CreateDate)</div>
                </div>
                <div>
                    <span class="font-semibold">@Html.DisplayNameFor(model => model.EditId):</span>
                    <div>@Html.DisplayFor(model => model.EditId)</div>
                </div>
                <div>
                    <span class="font-semibold">@Html.DisplayNameFor(model => model.EditDate):</span>
                    <div>@Html.DisplayFor(model => model.EditDate)</div>
                </div>
            </div>

            <!-- Delete Form Actions -->
            <form asp-action="Delete"
                  class="flex justify-between items-center pt-8 border-t border-gray-200">
                <input type="hidden" asp-for="SectorsServicesId" />
                <a asp-action="Index"
                   class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to List
                </a>
                <input type="submit"
                       value="Delete"
                       class="inline-flex items-center px-6 py-3 rounded-lg text-sm font-medium text-white bg-gradient-to-r from-red-600 to-pink-600 hover:from-red-700 hover:to-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 shadow-md hover:shadow-lg transition-all" />
            </form>
        </div>
    </div>
</body>
