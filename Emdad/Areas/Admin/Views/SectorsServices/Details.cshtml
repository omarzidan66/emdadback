@model Emdad.Models.SectorsServices

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sectors Services</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
</head>
<body class="bg-gray-50 p-8">
    <!-- Modern Card Container -->
    <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl overflow-hidden m-10">
        <!-- Header Section -->
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 px-8 py-6">
            <div class="flex items-center space-x-3">
                <div class="bg-white/20 rounded-full p-3">
                    <i class="fas fa-chart-pie text-white text-xl"></i>
                </div>
                <h1 class="text-3xl font-bold text-white">Sectors Services</h1>
            </div>
        </div>

        <!-- Content Section -->
        <div class="p-8">
            <!-- Primary Information -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
                <div class="space-y-6">
                    <div class="group">
                        <label class="block text-sm font-semibold text-gray-600 mb-2 uppercase tracking-wide">
                            @Html.DisplayNameFor(model => model.SectorsServicesName)
                        </label>
                        <div class="bg-gray-50 rounded-lg p-4 border-l-4 border-blue-500 group-hover:bg-blue-50 transition-colors">
                            <p class="text-gray-800 font-medium">
                                @Html.DisplayFor(model => model.SectorsServicesName)
                            </p>
                        </div>
                    </div>

                    <div class="group">
                        <label class="block text-sm font-semibold text-gray-600 mb-2 uppercase tracking-wide">
                            @Html.DisplayNameFor(model => model.SectorsServicesType)
                        </label>
                        <div class="bg-gray-50 rounded-lg p-4 border-l-4 border-green-500 group-hover:bg-green-50 transition-colors">
                            <div class="text-gray-800 font-medium">
                                @Html.DisplayFor(model => model.SectorsServicesType)
                            </div>
                        </div>
                    </div>

                    <div class="group">
                        <label class="block text-sm font-semibold text-gray-600 mb-2 uppercase tracking-wide">
                            @Html.DisplayNameFor(model => model.SectorsServicesLink)
                        </label>
                        <div class="bg-gray-50 rounded-lg p-4 border-l-4 border-purple-500 group-hover:bg-purple-50 transition-colors">
                            <div class="text-gray-800 font-medium">
                                @Html.DisplayFor(model => model.SectorsServicesLink)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="space-y-6">
                    <div class="group">
                        <label class="block text-sm font-semibold text-gray-600 mb-2 uppercase tracking-wide">
                            @Html.DisplayNameFor(model => model.Sectors.SectorsName)
                        </label>
                        <div class="bg-gray-50 rounded-lg p-4 border-l-4 border-orange-500 group-hover:bg-orange-50 transition-colors">
                            <p class="text-gray-800 leading-relaxed">
                                @Html.DisplayFor(model => model.Sectors.SectorsName)
                            </p>
                        </div>
                    </div>

                    <!-- Status Indicators -->
                    <div class="grid grid-cols-2 gap-4">
                        <div class="group">
                            <label class="block text-sm font-semibold text-gray-600 mb-2 uppercase tracking-wide">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                            <div class="bg-gray-50 rounded-lg p-4 border-l-4 border-green-500 group-hover:bg-green-50 transition-colors">
                                <div class="text-gray-800 font-medium">
                                    @Html.DisplayFor(model => model.IsActive)
                                </div>
                            </div>
                        </div>

                        <div class="group">
                            <label class="block text-sm font-semibold text-gray-600 mb-2 uppercase tracking-wide">
                                @Html.DisplayNameFor(model => model.IsDelete)
                            </label>
                            <div class="bg-gray-50 rounded-lg p-4 border-l-4 border-red-500 group-hover:bg-red-50 transition-colors">
                                <div class="text-gray-800 font-medium">
                                    @Html.DisplayFor(model => model.IsDelete)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Separator -->
            <div class="border-t border-gray-200 my-8"></div>

            <!-- Metadata Section -->
            <div class="bg-gray-50 rounded-xl p-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-info-circle text-gray-500 mr-2"></i>
                    Metadata
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Creation Info -->
                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-3 bg-white rounded-lg border border-gray-200">
                            <span class="text-sm font-medium text-gray-600">@Html.DisplayNameFor(model => model.CreateId)</span>
                            <span class="text-sm text-gray-800 font-mono bg-gray-100 px-2 py-1 rounded">@Html.DisplayFor(model => model.CreateId)</span>
                        </div>
                        <div class="flex items-center justify-between p-3 bg-white rounded-lg border border-gray-200">
                            <span class="text-sm font-medium text-gray-600">@Html.DisplayNameFor(model => model.CreateDate)</span>
                            <span class="text-sm text-gray-800">@Html.DisplayFor(model => model.CreateDate)</span>
                        </div>
                    </div>

                    <!-- Edit Info -->
                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-3 bg-white rounded-lg border border-gray-200">
                            <span class="text-sm font-medium text-gray-600">@Html.DisplayNameFor(model => model.EditId)</span>
                            <span class="text-sm text-gray-800 font-mono bg-gray-100 px-2 py-1 rounded">@Html.DisplayFor(model => model.EditId)</span>
                        </div>
                        <div class="flex items-center justify-between p-3 bg-white rounded-lg border border-gray-200">
                            <span class="text-sm font-medium text-gray-600">@Html.DisplayNameFor(model => model.EditDate)</span>
                            <span class="text-sm text-gray-800">@Html.DisplayFor(model => model.EditDate)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Bar -->
        <div class="bg-gray-50 px-8 py-4 border-t border-gray-200">
            <div class="flex justify-between items-center">
                <div class="flex space-x-3">
                    <div class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center space-x-2">
                        <i class="fas fa-edit"></i>
                        <a asp-action="Edit" asp-route-id="@Model?.SectorsServicesId">Edit</a>
                    </div>
                </div>
                <div class="flex space-x-3">
                    <div class="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors flex items-center space-x-2">
                        <i class="fas fa-arrow-left"></i>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
